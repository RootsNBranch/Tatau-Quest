<body>
  <div class="game-container">
    <h2>Tatau Quest</h2>
    <p>Select the meaning of this symbol: <strong>"Malu"</strong></p>
    <button class="pattern-button" onclick="checkAnswer('a')">A. Warrior Protection</button>
    <button class="pattern-button" onclick="checkAnswer('b')">B. Female Cultural Grace</button>
    <button class="pattern-button" onclick="checkAnswer('c')">C. Ocean Waves</button>
    <div class="result" id="result"></div>
  </div>

  <script>
    function checkAnswer(choice) {
      const result = document.getElementById('result');
      if (choice === 'b') {
        result.textContent = '✅ Correct! Malu represents cultural grace, protection, and identity for Samoan women.';
        result.style.color = 'green';
      } else {
        result.textContent = '❌ Not quite. Try again!';
        result.style.color = 'red';
      }
    }
  </script>
